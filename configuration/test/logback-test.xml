<configuration scanPeriod="1 seconds" >

  <appender
      name="STDOUT"
      class="ch.qos.logback.core.ConsoleAppender"
  >
    <layout class="ch.qos.logback.classic.PatternLayout">
      <Pattern>%d{HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n</Pattern>
    </layout>
  </appender>

  <logger name="org" >
    <level value="WARN" />
  </logger>

  <logger name="httpclient" >
    <level value="WARN" />
  </logger>

  <logger name="FOP" >
    <level value="WARN" />
  </logger>

  <logger name="novelang" >
    <level value="DEBUG" />
  </logger>

  <logger name="novelang.system.EnvironmentTools" >
    <level value="WARN" />
  </logger>

  <logger name="novelang.loader" >
    <level value="INFO" />
  </logger>

  <logger name="novelang.parser.antlr" >
    <level value="WARN" />
  </logger>

  <logger name="novelang.common.tree.Statistics" >
    <level value="WARN" />
  </logger>

  <root>
    <appender-ref ref="STDOUT" />
    <level value="INFO" />
  </root>

</configuration>