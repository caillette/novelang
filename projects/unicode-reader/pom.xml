  <name>Novelang-unicode-reader</name>
  <artifactId>unicode-reader</artifactId>

  <properties>
    <generated-binaries>${project.build.outputDirectory}</generated-binaries>
  </properties>


  <build>
    <plugins>

      <plugin>
        <groupId>org.novelang</groupId>
        <artifactId>unicode-names-generator</artifactId>
        <version>SNAPSHOT</version>
        <executions>
          <execution>
            <phase>generate-resources</phase>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <packageRootDirectory>${generated-binaries}</packageRootDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>

